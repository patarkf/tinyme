{
  "name": "tinyme",
  "version": "1.0.0",
  "description": "A command-line tool that uses TinyPNG API to minify images of a given directory",
  "main": "index.js",
  "scripts": {
    "build": "npm install -g . && npm install",
    "start": "node src/index.js",
    "test": "eslint src"
  },
  "bin": {
    "tinyme": "bin/tinyme.js"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "rules": {
      "no-console": 0,
      "no-unused-vars": 1
    }
  },
  "author": "Patrick Ferreira <paatrickferreira@gmail.com>",
  "dependencies": {
    "assert": "^1.4.1",
    "commander": "^2.11.0",
    "dotenv": "^4.0.0",
    "ncp": "^2.0.0",
    "tinify": "^1.5.0",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "eslint": "^3.1.1",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.3.0"
  }
}
